name: Sync release commits between branch

on:
  workflow_call:
    inputs:
      from_branch:
        required: true
        type: string
      to_branch:
        required: true
        type: string

jobs:
  sync-branches:
    runs-on: ubuntu-latest
    name: Syncing branches
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Node
        uses: actions/setup-node@v3
        with:
          node-version: 20

      - name: Setting Release branch 
        run: echo "FROM_BRANCH=${{ inputs.from_branch }}" >> $GITHUB_ENV

      - name: Open Sync PR
        id: pull
        uses: tretuna/sync-branches@main
        with:
          GITHUB_TOKEN: ${{ secrets.DAPR_BOT_TOKEN }}
          FROM_BRANCH: ${{ env.FROM_BRANCH }}
          TO_BRANCH: ${{ inputs.to_branch }}
          CONTENT_COMPARISON: true